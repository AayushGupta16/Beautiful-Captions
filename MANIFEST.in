include LICENSE
include README.md
include pyproject.toml
include requirements.txt
include requirements-dev.txt

# Include all font files
recursive-include beautiful_captions/fonts *.ttf
recursive-include beautiful_captions/fonts *.otf

# Include test files
recursive-include tests *.py

# Include type information
recursive-include beautiful_captions py.typed

# Exclude development and cache files
global-exclude *.py[cod]
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store
global-exclude .env
global-exclude .env.*